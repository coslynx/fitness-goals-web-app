{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "node"
    ],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "name": "next-plugin-babel",
        "transform": [
          "@babel/plugin-transform-runtime",
          "@emotion/babel-preset-css-prop"
        ]
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "next.config.js",
    "tailwind.config.js",
    "vite.config.js",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cypress"
  ]
}